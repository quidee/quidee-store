<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llGeneral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_card">

        <LinearLayout
            android:id="@+id/llOrderInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvOrderStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/order_placed"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvOrderPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$ 33,55"
                android:textStyle="bold"
                android:textSize="16sp"/>

        </LinearLayout>

        <View
            android:id="@+id/viewSeparator1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey"
            android:layout_marginTop="13dp"/>

        <RelativeLayout
            android:id="@+id/rlOrderDetails1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:minHeight="48dp"
            android:padding="12dp">

            <ImageView
                android:id="@+id/iconOrder1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:importantForAccessibility="no"
                android:src="@drawable/green_dot"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/tvOrderTitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/iconOrder1"
                android:text="@string/my_orders" />

            <LinearLayout
                android:id="@+id/llOrderDescription1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvOrderTitle1"
                android:layout_alignStart="@id/tvOrderTitle1"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:gravity="end">

                <TextView
                    android:id="@+id/tvOrderDetail1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/order_placed"
                    android:textColor="@color/dark_grey"
                    android:textAlignment="textStart"
                    android:textSize="14sp"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/tvOrderCode1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_code"
                    android:textColor="@color/dark_grey"
                    android:textAlignment="textEnd"
                    android:textSize="14sp"
                    android:gravity="end"
                    android:layout_gravity="end" />
            </LinearLayout>

        </RelativeLayout>

        <View
            android:id="@+id/viewSeparator2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_grey"/>

        <LinearLayout
            android:id="@+id/llOrderTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tvPlaceOrderTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/place_order_time"
                android:textColor="@color/m_grey"
                android:textSize="12sp"
                android:textAlignment="textStart"
                android:gravity="start"/>

            <TextView
                android:id="@+id/tvPlaceOrderTimeValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="12:55"
                android:layout_marginStart="3dp"
                android:textColor="@color/primary"
                android:textSize="12sp"
                android:textAlignment="textStart"
                android:gravity="start"/>

            <TextView
                android:id="@+id/tvDeliveryEstimate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delivery_estimate"
                android:textColor="@color/m_grey"
                android:textSize="12sp"
                android:textAlignment="textEnd"
                android:gravity="end"/>

            <TextView
                android:id="@+id/tvDeliveryEstimateValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13:55"
                android:layout_marginStart="3dp"
                android:textColor="@color/primary"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
